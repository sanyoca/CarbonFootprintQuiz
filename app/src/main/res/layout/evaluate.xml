<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/greenearth1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparentwhite"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/congrats"
                style="@style/evaluate_congrats"
                android:text="@string/congrats" />

            <TextView
                android:id="@+id/name_textview"
                style="@style/evaluate_name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/outof"
                style="@style/evaluate" />

            <TextView
                android:id="@+id/correct"
                style="@style/evaluate_correct_answers" />

            <TextView
                android:id="@+id/correctly"
                style="@style/evaluate"
                android:text="@string/correctly" />

            <LinearLayout
                android:id="@+id/listofanswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/evaluate_congrats"
                    android:text="@string/thesolution" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>